{
  "compilerOptions": {
    "lib": ["es2015", "es2016", "es2017", "es2018", "dom"],
    "outDir": "build",
    // "rootDir": "src",
    "sourceMap": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "strict": true,
    "baseUrl": "src",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    // Workaround
    // @see https://github.com/DefinitelyTyped/DefinitelyTyped/issues/24573
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
